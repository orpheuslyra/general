---
import {advantages} from "./data/advantage";
import PhotoCard from "../parts/card/PhotoCard.astro";
import HeadingOne from "../parts/heading/HeadingOne.astro";
import HeadingThree from "../parts/heading/HeadingThree.astro";
import AdvantageCard from "../parts/card/AdvantageCard.astro";
---

<HeadingOne heading="Advantage" sub="ゼネラルの強み"/>
<HeadingThree heading="見出しが入ります" />

<div class="content">
{advantages.map((data) => (
    <AdvantageCard 
        title={data.title} 
        description={data.description}
        imagePath={data.imagePath}
        backgroundColor={["#002D5E", "#004298"]}
        />
))}
</div>

<style lang="scss">
    .content{
        display: flex;
        margin: 50px 0;
        gap: 20px;
    }

    @include max("tab"){
        .content{
            flex-direction: column;
            align-items: center;
        }
    }
</style>