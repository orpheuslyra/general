---
import {companyInfo} from "../../../constants/about/companyInfo"
---

<div class="company-info-wrapper">
    <table class="company-info">
        <tbody>
            {companyInfo.map((item) => (
            <tr>
                <th class="info-label">{item.label}</th>
                <td class="info-data">{item.value}</td>
            </tr>
            ))}
            <tr>
                <th class="info-label">お問合せ</th>
                <td class="info-data">
                    <a href="http://forms.gle/xMnkoDKphxXM8ZY48" target="_blank" rel="noopener noreferrer">お問合せフォーム</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<style lang="scss">
    .company-info{
        width: 100%;
        border-top: 1px dotted #ccc;
        >tbody, th, td{
            border-bottom: 1px dotted #ccc;
            border-collapse: collapse;
            padding-block: 27px;
        }
    }
    .info-label{
        color: white;
        text-align: left;
    }
    .info-data{
        color: white;
        > a {
            text-decoration: underline;
        }
    }

    @include max("tab"){
        .info-label{
            width: 40%;
        }
    }
</style>

