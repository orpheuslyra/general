---
import Image from "astro/components/Image.astro";
import type {ImageMetadata} from "astro";

interface Props {
    imagePath: ImageMetadata;
    title:string;
    description:string;
}

const props: Props = Astro.props;
---

<div class="illust-card">
    <div class="illust-area">
        <Image src={props.imagePath} width={100} height={86} alt=""/>
        <div class="card-title">{props.title}</div>
    </div>
    <div class="illust-description">
        {props.description}
    </div>
</div>

<style lang="scss">
    .illust-card {
        display: flex;
        flex-direction: column;
        border-radius: 20px;
        width: 100%;
        
        .illust-area {
            background: linear-gradient(135deg,#002d5e 0%, #004298 100%);
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
            width: 100%;
            height: 242px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 30px;
            
            .card-title {
                font-weight: bold;
                color: white;
            }
        }
        .illust-description{
            @include typography-pc-description;
            padding: 20px 20px 40px;
            max-height: 100px;
            height: 10vw;
            background-color: #ffffff;
            border-bottom-left-radius: 20px;
            border-bottom-right-radius: 20px;
        }
    }

    @include max("tab"){
        .illust-card{
            .illust-description{
                height: 120px;
            }
        }
    }
</style>