---
import Image from "astro/components/Image.astro";
import type {ImageMetadata} from "astro";

interface Props {
    imagePath:ImageMetadata;
    title:string;
    description:string;
}

const props: Props = Astro.props;
---

<div class="illust-card">
    <div class="illust-area">
        <Image src={props.imagePath} width={100} height={86} alt=""/>
        <div class="card-title">{props.title}</div>
    </div>
    <div class="illust-description">
        {props.description}
    </div>
</div>

<style lang="scss">
    .illust-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        border-radius: 10px;
        width: 392px;
        height: 372px;

        
        .illust-area {
            background: linear-gradient(135deg,#002d5e 0%, #004298 100%);
            border-top-left-radius: 5%;
            border-top-right-radius: 5%;
            width: 392px;
            height: 242px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 30px;
            
            .card-title {
                font-weight: bold;
                color: white;
            }
        }
        
    }
</style>