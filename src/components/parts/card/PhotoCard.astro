---
import Image from "astro/components/Image.astro";
import type {ImageMetadata} from "astro";

interface Props {
    imagePath:ImageMetadata;
    title:string;
    description:string;
    backgroundColor?:string[];
}

const props: Props = Astro.props
---

<div class="photo-card">
    <Image src={props.imagePath} alt="" class="photo-area"/>
    <div class="description-area">
        <div class="card-title">{props.title}</div>
        <div class="card-description">{props.description}</div>
    </div>
</div>

<style lang="scss">

    .photo-card{
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 100%;

        .photo-area{
            width: 100%;
            max-height: 249px;
            border-radius: 20px;
        }

        .description-area{
            .card-title{
                @include typography-pc-subtitle;
                padding-block: 20px;
            }

            .card-description {
                @include typography-pc-description;
                height: 120px;
            }
        }
    }



</style>