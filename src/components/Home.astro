---
import Hero from './hero/Hero.astro';
import Mission from './mission/Mission.astro';
import Service from './service/Service.astro';
import Advantage from './advantage/Advantage.astro';
import RoadMap from './roadmap/RoadMap.astro';
import News from './news/News.astro';
import Member from './member/Member.astro';
---

<div class="container">
	<main>
		<Hero/>
		<div class="main-content">
			<section id="mission" class="content-section fade-in">
				<Mission/>
			</section>
			<section id="service" class="content-section fade-in">
				<Service />
			</section>
			<section id="advantage" class="content-section fade-in">
				<Advantage />
			</section>
			<section id="roadmap" class="content-section fade-in">
				<RoadMap />
			</section>
		</div>
		<div class="news-content">
			<section id="news" class="content-section fade-in">
				<News />
			</section>
		</div>
		<div class="member-content">
			<section id="member" class="content-section fade-in">
				<Member />
			</section>
		</div>
	</main>

</div>


<style lang="scss">

	main {
		height: 100%;
	}

	.main-content{
		margin:0 auto;
		max-width: 1240px;
		padding-inline: 63px;
	}

	.content-section {
		padding-block: 40px;
	}

	.news-content{
		background-color: #e8edf2;
		> #news{
			margin: 0 auto;
			max-width: 1240px;
		}
	}

	.fade-in {
	  	opacity: 0;
  		transform: translateY(20px);
  		transition: opacity 0.6s ease-in, transform 0.6s ease-out;
	}

	.fade-in.show {
  		opacity: 1;
  		transform: translateY(0);
	}

	.member-content{
		padding: 0 63px 80px;
		background-color: #e8edf2;
		> #member{
			margin: 0 auto;
			max-width: 1240px;
		}
	}

	#news {
		background-color: #e8edf2;
	}


@include max("tab"){
	

	.keyvisual-sp{
		display: block;
		width: 100vw;
	}


	.main-content{
		padding-inline: 0;
	}

	.content-section {
		padding-block: 20px;
	}

	.news-content {
		padding-inline: 0;
	}

	.member-content {
		padding-inline: 0;
	}
}
</style>
